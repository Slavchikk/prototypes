<Page x:Class="prototypes.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prototypes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Background="Wheat" Width="200" Height="300">
            <GroupBox Header="Введите логин">
                <TextBox Name="TbLoginReg"/>
            </GroupBox>
            <GroupBox Header="Введите пароль">
                <TextBox Name="TbPasReg"/>
            </GroupBox>
            <Button Click="Btn_registration" Name ="btnAuto">Авторизоваться</Button>
            <TextBlock  Visibility="Hidden"  Margin="0,30,0,0"  Name ="timeZap" Height="50"></TextBlock>
            <Button   Name="timeBut"  Click="btn_newCode">Получить код</Button>
        </StackPanel>
          </Grid>
</Page>
